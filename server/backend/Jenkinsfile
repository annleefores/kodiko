pipeline {
  agent {
    docker {image 'python:3.10.12-buster'}
  }
  environment {
        SCANNER_HOME = tool 'sonar-scanner'
  }

  stages {
    stage('SQ') {
    steps{
      withSonarQubeEnv(installationName: 'sq1') {
          sh "${SCANNER_HOME}/bin/sonar-scanner -Dsonar.projectKey=kodiko -Dsonar.source=. -Dsonar.host.url=${env.SONAR_HOST_URL} -Dsonar.login=${env.SONAR_AUTH_TOKEN}"
      }
    }
    }

    stage('Quality Gate') {
      steps{
       timeout(time: 2, unit: 'MINUTES') {
            waitForQualityGate abortPipeline: true
       }
      }
    }
  }
}