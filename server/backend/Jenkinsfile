pipeline {
  agent {
    docker {image 'annleefores/jenkins-agent'}
  }

  stages {
    stage('SQ') {
    steps{
      withSonarQubeEnv(installationName: 'sq1') {
          sh "/home/sonar-scanner-cli/bin/sonar-scanner -Dsonar.projectKey=kodiko-backend -Dsonar.source=./server/backend -Dsonar.host.url=${env.SONAR_HOST_URL} -Dsonar.login=${env.SONAR_AUTH_TOKEN}"
      }
    }
    }

    stage('Quality Gate') {
      steps{
       timeout(time: 2, unit: 'MINUTES') {
            waitForQualityGate abortPipeline: true
       }
      }
    }
  }
}